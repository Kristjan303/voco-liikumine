                    <i class="fa-solid fa-file-pen fa-lg"></i> <p> Muuda </p>
                </div>
                <div class="submit-edit-article" id="submitEdit" style="display: none;">
                    <i class="fa-solid fa-file-import fa-lg"></i> <p> Salvesta muudatused</p>
                </div>
            </div>

            <section id="holdEdit">
                <div id="holdEditHeader" style="display: none">
                    <p>Artikli pealkiri: </p>
                    <input type="text" name="editArticleHeader" id="editArticleHeader"  value="<%= articleHeader %>">
                </div>
                <div id="summernote" style="display: none;"></div>
            </section>
            <script>
                document.addEventListener("DOMContentLoaded", function() {
                    var isSummernoteVisible = false;
                    var summernoteDiv = document.getElementById("summernote");
                    var submitEditButton = document.getElementById("submitEdit");
                    var editArticleHeader = document.getElementById("editArticleHeader");
                    var holdEditHeader = document.getElementById("holdEditHeader");
                    var holdEdit = document.getElementById("holdEdit");

                    document.getElementById("edit-article-trigger").addEventListener("click", function() {
                        if (!isSummernoteVisible) {
                            summernoteDiv.style.display = "block";
                            submitEditButton.style.display = ""; // Show the submit button
                            editArticleHeader.value = "<%= articleHeader %>";
                            holdEditHeader.style.display = "";
                            holdEdit.style.display = "flex";
                            $('#summernote').summernote({
                                tabsize: 2,
                                height: 200,
                                toolbar: [
                                    ['style', ['style']],
                                    ['font', ['bold', 'underline', 'clear']],
                                    ['color', ['color']],
                                    ['para', ['ul', 'ol', 'paragraph']],
                                    ['table', ['table']],
                                    ['insert', ['link', 'picture']],
                                    ['view', ['help']]
                                ],
                                callbacks: {
                                    onPaste: function (e) {
                                        // Prevent the default paste behavior
                                        e.preventDefault();

                                        // Get the pasted content
                                        var pastedContent = (e.originalEvent.clipboardData || window.clipboardData).getData('text/plain');

                                        // Remove all HTML tags and extra spaces
                                        pastedContent = pastedContent.replace(/<[^>]+>/g, ''); // Remove HTML tags
                                        pastedContent = pastedContent.replace(/\s+/g, ' '); // Remove extra spaces

                                        // Insert the plain text into the editor
                                        document.execCommand('insertText', false, pastedContent.trim());
                                    }
                                }
                            });
                            $('#summernote').summernote('code', `<%- articleContent %>`);
                        } else {
                            $('#summernote').summernote('code', ''); // Clear Summernote content
                            summernoteDiv.style.display = "none";
                            submitEditButton.style.display = "none"; // Hide the submit button
                            // Destroy Summernote instance
                            holdEditHeader.style.display = "none";
                            editArticleHeader.value = "";
                            $('#summernote').summernote('destroy');
                            holdEdit.style.display = "none";
                        }

                        isSummernoteVisible = !isSummernoteVisible;
                    });

                    // Add event listener for submit button
                    submitEditButton.addEventListener("click", function() {
                        var articleHeader = "<%= articleHeader %>";
                        var articleContent = $('#summernote').summernote('code');
                        var data = {
                            articleHeader: articleHeader,
                            articleContent: articleContent,
                            editArticleHeader: editArticleHeader.value
                        };

                        // Send a POST request to the backend endpoint to update the article content
                        fetch('/update-articles', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(data)
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    // Alert the user upon successful update
                                    alert('Artikli sisu edukalt uuendatud!');
                                    const encodedHeader = encodeURIComponent(editArticleHeader.value);
                                    window.location.href = '/artiklid/' + encodedHeader;
                                } else {
                                    if (data.message === 'No changes were made to the article content.') {
                                        // Alert the user that no changes were made
                                        alert('Muudatusi pole tehtud!');
                                    } else {
                                        console.error('Error updating article content:', data.error);
                                        // Handle other error scenarios appropriately
                                    }
                                }
                            })

                                .catch(error => {
                                console.error('Error updating article content:', error);
                                // Handle the error scenario appropriately
                            });
                    });
                });
            </script>


        <% } %>


